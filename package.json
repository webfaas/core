{
  "name": "core",
  "version": "0.0.1-alpha",
  "description": "FaaS Framework - Core",
  "main": "lib/index.js",
  "readmeFilename": "README.md",
  "keywords": [
    "webfaas",
    "faas",
    "rpc",
    "fog",
    "web"
  ],
  "scripts": {
    "test": "mocha --config scripts/mocha.json",
    "test:coverage": "nyc --nycrc-path scripts/nyc.json npm run test",
    "start": "node_modules/.bin/tsc -w && npm run build:static",
    "build": "npm run build:clean && node_modules/.bin/tsc && npm run build:static",
    "build:clean": "rm -rf dist",
    "build:static": "cp package.json dist && cp README.md dist && cp .npmignore dist && cp src/test/data -R dist/test",
    "publisher": "cd dist && npm publisher --access public",
    "publisher:pack": "cd dist && npm pack",
    "buildAndTest": "npm run build && npm run test:coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/webfaas/core.git"
  },
  "dependencies": {
    "semver": "6.*"
  },
  "devDependencies": {
    "@types/semver": "6.*",
    "@types/chai": "4.*",
    "@types/mocha": "5.*",
    "@types/node": "12.*",
    "chai": "4.*",
    "mocha": "6.*",
    "nyc": "14.*",
    "typescript": "3.*",
    "typescript-tslint-plugin": "0.*"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "author": {
    "name": "Rog√©rio Dias Moreira",
    "email": "rogeriodegoiania@gmail.com"
  },
  "license": "MIT"
}
