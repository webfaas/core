{
  "name": "core",
  "version": "0.0.1-alpha",
  "description": "FaaS Framework - Core",
  "main": "lib/index.js",
  "readmeFilename": "README.md",
  "keywords": [
    "webfaas",
    "faas",
    "rpc",
    "fog",
    "web"
  ],
  "scripts": {
    "test": "mocha --config scripts/mocha.json",
    "test:coverage": "nyc --nycrc-path scripts/nyc.json npm run test",
    "build": "node node_modules/gulp/bin/gulp.js --gulpfile scripts/gulpfile.js build",
    "build:all": "node node_modules/gulp/bin/gulp.js --gulpfile scripts/gulpfile.js build:all",
    "build:test": "node node_modules/gulp/bin/gulp.js --gulpfile scripts/gulpfile.js build:test",
    "build:examples": "node node_modules/gulp/bin/gulp.js --gulpfile scripts/gulpfile.js build:test",
    "buildAndTest": "npm run build:all && npm run test:coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/webfaas/core.git"
  },
  "dependencies": {
    "semver": "6.*"
  },
  "devDependencies": {
    "@types/chai": "4.*",
    "@types/mocha": "5.*",
    "@types/node": "12.*",
    "chai": "4.*",
    "gulp": "4.*",
    "gulp-sourcemaps": "2.*",
    "gulp-typescript": "5.*",
    "mocha": "6.*",
    "nyc": "14.*",
    "typescript": "3.*",
    "typescript-tslint-plugin": "0.*"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "author": {
    "name": "Rog√©rio Dias Moreira",
    "email": "rogeriodegoiania@gmail.com"
  },
  "license": "MIT",
  "oldmocha": {
    "spec": "dist/test/**/*.test.js"
  },
  "oldnyc2": {
    "all": false,
    "cache": false,
    "sourceMap": false,
    "instrument": true
  },
  "oldnyc": {
    "all": true,
    "include": [
      "dist/test/**/*.js"
    ],
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
